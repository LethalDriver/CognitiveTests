<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:background="@drawable/gradient_background"
    >


    <com.google.android.material.button.MaterialButton
        android:id="@+id/triangleBtn"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:layout_marginEnd="48dp"
        android:layout_marginBottom="32dp"
        app:icon="@drawable/baseline_triangle_24"
        android:backgroundTint="@color/white"
        app:iconTint="@color/primary"
        app:iconGravity="textStart"
        app:iconPadding="0dp"
        app:iconSize="96dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/circleBtn"
        android:layout_width="96dp"
        android:layout_height="96dp"
        app:iconPadding="0dp"
        app:iconGravity="textStart"
        android:backgroundTint="@color/white"
        app:iconTint="@color/primary"
        app:iconSize="64dp"
        app:icon="@drawable/baseline_circle_24"
        app:layout_constraintBottom_toTopOf="@+id/arrowDownBtn"
        app:layout_constraintEnd_toStartOf="@+id/arrowRightBtn"
        app:layout_constraintStart_toEndOf="@+id/arrowLeftBtn" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/lineBtn"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:layout_marginStart="48dp"
        app:iconPadding="0dp"
        app:iconGravity="textStart"
        android:backgroundTint="@color/white"
        app:iconTint="@color/primary"
        app:iconSize="96dp"
        app:icon="@drawable/baseline_horizontal_line_24"
        app:layout_constraintBottom_toTopOf="@+id/arrowLeftBtn"
        app:layout_constraintStart_toStartOf="parent" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/arrowUpBtn"
        android:layout_width="96dp"
        android:layout_height="96dp"
        app:icon="@drawable/baseline_keyboard_arrow_up_24"
        android:backgroundTint="@color/white"
        app:iconTint="@color/primary"
        app:iconGravity="textStart"
        app:iconPadding="0dp"
        app:iconSize="96dp"
        app:layout_constraintBottom_toTopOf="@+id/circleBtn"
        app:layout_constraintEnd_toStartOf="@+id/crossBtn"
        app:layout_constraintStart_toEndOf="@+id/lineBtn" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/crossBtn"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:layout_marginEnd="48dp"
        app:iconPadding="0dp"
        app:iconGravity="textStart"
        android:backgroundTint="@color/white"
        app:iconTint="@color/primary"
        app:iconSize="96dp"
        app:icon="@drawable/baseline_cross_24"
        app:layout_constraintBottom_toTopOf="@+id/arrowRightBtn"
        app:layout_constraintEnd_toEndOf="parent" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/arrowLeftBtn"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:layout_marginStart="48dp"
        app:iconPadding="0dp"
        app:iconGravity="textStart"
        android:backgroundTint="@color/white"
        app:iconTint="@color/primary"
        app:iconSize="96dp"
        app:icon="@drawable/baseline_keyboard_arrow_left_24"
        app:layout_constraintBottom_toTopOf="@+id/squareBtn"
        app:layout_constraintStart_toStartOf="parent" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/arrowRightBtn"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:layout_marginEnd="48dp"
        app:iconPadding="0dp"
        app:iconGravity="textStart"
        android:backgroundTint="@color/white"
        app:iconTint="@color/primary"
        app:iconSize="96dp"
        app:icon="@drawable/baseline_keyboard_arrow_right_24"
        app:layout_constraintBottom_toTopOf="@+id/triangleBtn"
        app:layout_constraintEnd_toEndOf="parent" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/squareBtn"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:layout_marginStart="48dp"
        android:layout_marginBottom="32dp"
        app:icon="@drawable/baseline_square_24"
        android:backgroundTint="@color/white"
        app:iconTint="@color/primary"
        app:iconGravity="textStart"
        app:iconPadding="0dp"
        app:iconSize="96dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/arrowDownBtn"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:layout_marginBottom="32dp"
        app:icon="@drawable/baseline_keyboard_arrow_down_24"
        android:backgroundTint="@color/white"
        app:iconTint="@color/primary"
        app:iconGravity="textStart"
        app:iconPadding="0dp"
        app:iconSize="96dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/triangleBtn"
        app:layout_constraintStart_toEndOf="@+id/squareBtn" />

    <LinearLayout
        android:id="@+id/firstRow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/progressIndicator">


        <LinearLayout
            android:layout_width="48dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <android.widget.Button
                android:id="@+id/button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/baseline_horizontal_line_24" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textColor="@color/white"
                android:text="1" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="48dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <android.widget.Button
                android:id="@+id/button2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/baseline_horizontal_line_24"
                app:iconGravity="textStart"
                app:iconPadding="0dp"
                app:iconSize="32dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textColor="@color/white"
                android:text="2" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="48dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <android.widget.Button
                android:id="@+id/button3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/baseline_horizontal_line_24"
                app:iconGravity="textStart"
                app:iconPadding="0dp"
                app:iconSize="32dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="3"
                android:textColor="@color/white"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="48dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <android.widget.Button
                android:id="@+id/button4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/baseline_horizontal_line_24"
                app:iconGravity="textStart"
                app:iconPadding="0dp"
                app:iconSize="32dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="4"
                android:textColor="@color/white"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="48dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <android.widget.Button
                android:id="@+id/button5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/baseline_horizontal_line_24"
                app:iconGravity="textStart"
                app:iconPadding="0dp"
                app:iconSize="32dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="5"
                android:textColor="@color/white"
                />
        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/firstRow">

        <LinearLayout
            android:layout_width="48dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <android.widget.Button
                android:id="@+id/button6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/baseline_horizontal_line_24"
                app:iconGravity="textStart"
                app:iconPadding="0dp"
                app:iconSize="32dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="6"
                android:textColor="@color/white"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="48dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <android.widget.Button
                android:id="@+id/button7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/baseline_horizontal_line_24"
                app:iconGravity="textStart"
                app:iconPadding="0dp"
                app:iconSize="32dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="7"
                android:textColor="@color/white"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="48dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <android.widget.Button
                android:id="@+id/button8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/baseline_horizontal_line_24"
                app:iconGravity="textStart"
                app:iconPadding="0dp"
                app:iconSize="32dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="8"
                android:textColor="@color/white"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="48dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <android.widget.Button
                android:id="@+id/button9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/baseline_horizontal_line_24"
                app:iconGravity="textStart"
                app:iconPadding="0dp"
                app:iconSize="32dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textColor="@color/white"
                android:text="9" />
        </LinearLayout>


    </LinearLayout>

    <TextView
        android:id="@+id/digitTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="40sp"
        app:layout_constraintBottom_toTopOf="@+id/arrowUpBtn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout"
        android:textColor="@color/white"
        />

    <com.google.android.material.progressindicator.LinearProgressIndicator
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:id="@+id/progressIndicator"
        app:trackThickness="8dp"
        app:indicatorColor="@color/white"
        />


</androidx.constraintlayout.widget.ConstraintLayout>